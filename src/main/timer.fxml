                <Pane fx:id="paneCol3Row0" styleClass="panel-deactivated" GridPane.columnIndex="3"
                      GridPane.rowIndex="0"/>
                <Pane fx:id="paneCol3Row1" styleClass="panel-deactivated" GridPane.columnIndex="3"
                      GridPane.rowIndex="1"/>
