          minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="600.0"
          stylesheets="/main/timer.css" vgap="10" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.TimerController">

