            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
    <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <children>
            <GridPane hgap="3" styleClass="grid-background" vgap="3">
                <Pane fx:id="paneCol0Row0" styleClass="panel-deactivated" GridPane.columnIndex="0"
                      GridPane.rowIndex="0"/>
